{% extends 'base.html.twig' %}

{% block title %}Vendor index{% endblock %}

{% block body %}
    <h1>Vendor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Contact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendor in vendors %}
            <tr>
                <td>{{ vendor.id }}</td>
                <td>{{ vendor.name }}</td>
                <td>{{ vendor.contact }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('vendor_show', {'id': vendor.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-lg" href="{{ path('vendor_new') }}">Create new</a>
{% endblock %}