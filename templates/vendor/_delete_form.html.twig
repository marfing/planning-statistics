<form method="post" action="{{ path('vendor_delete', {'id': vendor.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vendor.id) }}">
    <button class="btn btn-outline-danger btn-lg">Delete</button>
</form>