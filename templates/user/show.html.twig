{% extends 'base.html.twig' %}

{% block title %}Utente{% endblock %}

{% block body %}
    <h1>Utente</h1>

    <table class="table">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            {% if user.feasibilitiesB2B | length > 0 %}
            <tr>Feasibilities
                <th>Fattibilit√†</th>
                <td>
                    <table clas="table">
                        <tbody>
                        {% for feasibility in user.feasibilitiesB2B %}
                            <tr><td>{{ feasibility.CustomerName }}</td></tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
    <a class="btn btn-outline-primary" href="{{ path('user_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
    {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}