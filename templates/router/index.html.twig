{% extends 'base.html.twig' %}

{% block title %}Router index{% endblock %}

{% block body %}
    <h1>Router index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IpAddress</th>
                <th>FileSystemRootPath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for router in routers %}
            <tr>
                <td>{{ router.id }}</td>
                <td>{{ router.name }}</td>
                <td>{{ router.ipAddress }}</td>
                <td>{{ router.fileSystemRootPath }}</td>
                <td>
                    <a href="{{ path('router_show', {'id': router.id}) }}">show</a>
                    <a href="{{ path('router_edit', {'id': router.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('router_new') }}">Create new</a>
{% endblock %}