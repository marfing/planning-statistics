{% extends 'base.html.twig' %}

{% block title %}Router{% endblock %}


{% block body %}
    <h1>Router</h1>

    <table id="router"
            data-toggle="table"
            data-search="true"
            data-pagination="true"
            data-page-size="50"
            data-pagination-loop="true"
            >
        <tbody>
            <tr>
                <th data-field="Id" data-filter-control="input" data-sortable="true">Id</th>
                <td>{{ router.id }}</td>
            </tr>
            <tr>
                <th data-field="Name" data-filter-control="input" data-sortable="true">Name</th>
                <td>{{ router.name }}</td>
            </tr>
            <tr>
                <th data-field="IP Address" data-filter-control="input" data-sortable="true">IpAddress</th>
                <td>{{ router.ipAddress }}</td>
            </tr>
            <tr>
                <th data-field="File System Root Path" data-filter-control="input" data-sortable="true">FileSystemRootPath</th>
                <td>{{ router.fileSystemRootPath }}</td>
            </tr>
<!--            <tr>
                <th>Flows In</th>
                <td>
                    <a href="{{ path('traffic_report_selected_index', {'routerInIP': router.ipAddress}) }}">Flow list</a>
                </td>
            </tr> -->
        </tbody>
    </table>
    <div class="mt-2">
        <a class="btn btn-primary" href="{{ path('router_index') }}">back to list</a>
        <a class="btn btn-primary" href="{{ path('router_edit', {'id': router.id}) }}">edit</a>
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('router/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}

