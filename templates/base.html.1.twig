        <script src="{{asset('/js/bootstrap.min.js')}}"></script> 

        <!-- Font Awesome JS -->
        <script defer src="{{asset('/js/solid.js')}}" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
