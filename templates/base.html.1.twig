    <body>
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>tiscali:planning</h3>
            </div>

            <ul class="list-unstyled components">
                <p>Planning services</p>
                <li>
                    <a href="{{ path('home')}}" class="nav-link">Home</a>
                </li>
                <li class="active">
                    <a href="#fattibilitàSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Fattibilità</a>
                    <ul class="collapse list-unstyled" id="fattibilitàSubmenu">
                        <li>
                            <a href="#">B2B</a>
                            <a href="#">Wholesale</a>
                        </li>
                    </ul>
                </li>
                <li class="active">
                    <a href="#erlangbSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">ErlangB</a>
                    <ul class="collapse list-unstyled" id="erlangbSubmenu">
                        <li>
                            <a href="{{ path('erlangb')}}">Erlang</a>
                        </li>
                        <li>
                            <a href="{{ path('erlangb_minutes')}}">Minutes</a>
                        </li>
                    </ul>
                </li>
                <li class="active">
                    <a href="#netelementsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Network Elements</a>
                    <ul class="collapse list-unstyled" id="netelementsSubmenu">
                        <li>
                            <a href="{{ path('network_element_index')}}">All</a>
                        </li>
                        {{ render(controller('App\\Controller\\NetworkElementsTypeController::getElementsTypeList')) }}
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="{{ path('vendor_index')}}" class="nav-link">Vendors</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('network_elements_type_index')}}" class="nav-link">Elements Types</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('cli_rgn_map')}}" class="nav-link">Map Cli-Rgn</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">
            <div class="navbar navbar-expand-lg navbar-light">
                <ul class="navbar-nav bd-navbar-nav flex-row col-md-8">
                    <li class="nav-item">
                         <button type="button" id="sidebarCollapse" class="btn btn-info">
                            <i class="fas fa-align-left"></i>
                            <span>Toggle Sidebar</span>
                        </button>
                    </li>
                </ul>
                <ul class="navbar-nav flex-row ml-md-auto">
                    <li class="nav-item">
                        <a class="btn btn-info" href="{{ path('login')}}">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Login</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info ml-2" href="{{ path('logout')}}">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </div>

            {% block body %}{% endblock %}
        </div>
    </div>

    <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="{{asset('/js/jquery-3.3.1.slim.min.js')}}" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="{{asset('/js/popper.min.js')}}" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>

    </body>
</html>
