{% extends 'base.html.twig' %}

{% block title %}StatisticaRete{% endblock %}

{% block body %}
    <h1>StatisticaRete</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ statistica_rete.id }}</td>
            </tr>
            <tr>
                <th>Valore</th>
                <td>{{ statistica_rete.valore }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ statistica_rete.data ? statistica_rete.data|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Network Element</th>
                <td>{{ statistica_rete.networkElement.nome }}</td>
            </tr>
        </tbody>
    </table>


    <div class="container">
        <div class="row">
            <div class="col">
                <a class="btn btn-primary" href="{{ path('statistica_rete_edit', {'id': statistica_rete.id}) }}">edit</a>
                <a class="btn btn-outline-primary" href="{{ path('statistica_rete_index') }}">back to list</a>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <div class="col">
                {{ include('statistica_rete/_delete_form.html.twig') }}
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}