<!DOCTYPE html>
<html>
    <head>
        {% block meta %}{% endblock %}
                
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="{{asset('/bootstrap/css/bootstrap.min.css')}}">
        <link rel="stylesheet" href="{{asset('/bootstrap/css/bootstrap-table.css')}}">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="{{ asset('/css/sidebar/style.css')}}">
        <!-- Fontawesome CSS -->
        <link href="{{ asset('/fontawesome/css/all.css') }}" rel="stylesheet"> <!--load all styles -->
        
        {% block stylesheets %}{% endblock %}
        
    </head>

    <body>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
            <script src="{{ asset('/js/jquery-3.3.1.js') }}"></script>
            <script src="{{asset('/js/jquery.base64.js')}}"></script>

            <!-- Bootstrap JS -->
            <script src="{{ asset('/bootstrap/js/bootstrap.min.js') }}"></script> 
            <script src="{{asset('/bootstrap/js/bootstrap-table.js')}}"></script>
            <script src="{{asset('/bootstrap/js/bootstrap-table-it-IT.js')}}"></script>
            <!-- Font Awesome JS -->
            <script defer src="{{ asset('/fontawesome/js/all.js') }}"></script>
            <!-- Popper.JS -->
            <script src="{{asset('/js/popper.js')}}"></script>
            <script src="{{asset('/js/popper.min.js')}}"></script>

            {% block javascripts %}{% endblock %}

    </body>
</html>
